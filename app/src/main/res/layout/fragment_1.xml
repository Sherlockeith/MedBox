<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".module.Fragment1"
    android:background="@color/whitesmoke"
    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="20dp"
        android:text="Keep in"
        android:textSize="30dp"
        android:textColor="@color/login_text"
        android:textStyle="bold">
    </TextView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="90dp"
        android:layout_marginLeft="20dp"
        android:text="Good Health"
        android:textSize="35dp"
        android:textColor="@color/login_text"
        android:textStyle="bold">
    </TextView>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/med"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="230dp"
        android:src="@drawable/med"
        android:scaleType="center">
    </androidx.appcompat.widget.AppCompatImageView>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="180dp"
        android:src="@drawable/line"
        android:scaleType="center">
    </androidx.appcompat.widget.AppCompatImageView>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ring"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginTop="204dp"
        android:layout_marginLeft="25dp"
        android:src="@drawable/ring">
    </androidx.appcompat.widget.AppCompatImageView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="200dp"
        android:layout_marginLeft="52dp"
        android:text="My alarms"
        android:textSize="20dp"
        android:textColor="@color/black"
        android:textStyle="bold">
    </TextView>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/alarm1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="235dp"
        android:src="@drawable/alarm"
        android:scaleType="center">
    </androidx.appcompat.widget.AppCompatImageView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="300dp"
        android:layout_marginLeft="40dp"
        android:text="Morning, before breakfast"
        android:textSize="15dp"
        android:textColor="@color/black"
        android:textStyle="italic">
    </TextView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="350dp"
        android:layout_marginLeft="40dp"
        android:text="Alarm set for 7 am"
        android:textSize="15dp"
        android:textColor="@color/black"
        android:textStyle="normal">
    </TextView>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/alarm2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="425dp"
        android:src="@drawable/alarm"
        android:scaleType="center">
    </androidx.appcompat.widget.AppCompatImageView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="490dp"
        android:layout_marginLeft="40dp"
        android:text="Morning, after breakfast"
        android:textSize="15dp"
        android:textColor="@color/black"
        android:textStyle="italic">
    </TextView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="540dp"
        android:layout_marginLeft="40dp"
        android:text="Alarm set for 11 am"
        android:textSize="15dp"
        android:textColor="@color/black"
        android:textStyle="normal">
    </TextView>
